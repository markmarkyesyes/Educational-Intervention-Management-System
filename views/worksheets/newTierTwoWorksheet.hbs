<div class="row">
  <h1 class="text-center">Tier Two Worksheet</h1>
  <h2 class="text-center">Subject: {{subject}}</h2>
  <h2 class="text-center">For: {{student}}</h2>
  <hr />
  <div class="form-group">
    <div class="col-md-6">
      <form action="/form/submitWorksheet" method="POST">
        <!-- hidden inputs -->
        <input type="hidden" name="Subject" value="{{Subject}}">
        <!-- should only post the _id mentioned in  -->
        <input type="hidden" name="student" value="{{student}}">
        <!-- when making above change, make sure to differentiate student and teacher ids -->
        <input type="hidden" name="_id" value="{{currUser}}">
        <!-- hidden inputs -->
        <label for="problemId">Problem Identification</label>
        <textarea name="Problem_ID" class="form-control"  id="problemId" cols="90" rows="7" class="form-control" style="resize:none"></textarea><br />
        <label for="problemAnalysis">Problem Analysis</label>
        <textarea name="Problem_Analysis" class="form-control" id="problemAnalysis" cols="30" rows="7" class="form-control" style="resize:none"></textarea><br />
        <label for="goal">Intervention Goal</label>
        <textarea name="Goal" class="form-control" id="goal" cols="30" rows="7" class="form-control" style="resize:none"></textarea><br />
        <!-- program dropdowns based on subject -->
        <label for="descriptionTierOne">Description Tier One Intervention</label>
          <ul>
            <li>Data will be served here</li>
          </ul>
        <hr />
        <label for="descriptionTierTwo">Description Tier Two Intervention</label><br />
          {{#each interventionStrategies as |strategy| }}
            <div class="checkbox">
              <label>
                <input type="checkbox" name="Description_of_Interv_Tier_2[{{strategy.field}}]" >{{strategy.label}}</input>
              </label>
            </div>
          {{/each}}
    </div>
    <div class="col-sm-4">
      <!-- add validations for earliest, latest -->
      <label for="startDate">Start Date</label>
      <input type="date" class="form-control" id="startDate" name="Tier_2_Date_Started"> </input><br />
      <label for="endDate">End Date</label>
      <input type="date" class="form-control" id="endDate" name="Tier_2_Date_Ended"> </input><br />
      <hr />
      <label for="minutesPerSession">Minutes Per Session</label>
      <input type="text" class="form-control" id="minutesPerSession" name="Tier_2_minssessions" /><br />
      <label for="sessionsPerWeek">Sessions Per Week</label>
      <input type="text" class="form-control" id="sessionsPerWeek" name="Tier_2_SessionsWeek" /><br />
      <hr />
      <datalist id="facultyNames">
        {{#each facultyNames as |faculty|}}
          <option value="{{faculty}}">
        {{/each}}
      </datalist>
      <label for="interventionistName">Select Interventionist and Progress Monitor</label><br />
      <input type="text" list="facultyNames" class="form-control" id="interventionistName" name="Tier_2_Interventionist" />
      <br />
      <label for="pmFrequency">Frequency of Progress Monitoring</label>
      <span>After:</span><input type="text" class="form-control" id="pmFrequency" name="Frequency_PMing">Sessions</input><br />
      <label for="pmTools">Select Progress Monitoring Tools</label><br />
        {{#each progressTools as |pmTool|}}
          <div class="checkbox">
            <label>
              <input type="checkbox" name="PMing_Tool[{{pmTool.id}}]" > {{pmTool.label}}</input>
            </label>
          </div>
        {{/each}}
      <br />
    </div>
    <div class="col-sm-10">
      <hr />
    </div>
    <div class="col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
      </form>
  </div>
</div>
